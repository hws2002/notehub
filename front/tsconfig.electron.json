{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist-electron",
    "baseUrl": ".",
    "paths": {
      "@electron/*": ["electron/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["electron/preload.ts"]
}