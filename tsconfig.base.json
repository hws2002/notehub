{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@notehub/shared/*": ["packages/shared/*"],
      "@notehub/frontend/*": ["packages/frontend/*"],
      "@notehub/backend/*": ["packages/backend/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  }
}